!!! html5
%html
  %head
    %meta{charset: "utf-8"}
    %meta{http_equiv: "X-UA-Compatible", content:"IE=edge,chrome=1"}
    %title= "Scalingo - #{ current_page.data.title }"

    %meta{name: "viewport", content: "width=device-width, initial-scale=1.0"}

    %script{src:"//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"}
    = javascript_include_tag 'application'
    = stylesheet_link_tag 'application'
    %link{href: "//fonts.googleapis.com/css?family=Roboto:400,100,100italic,300,300italic,400italic,500,500italic,700,700italic,900,900italic", media: "screen", rel: "stylesheet"}

    %link{href: "https://scalingo.com/favicon.ico", rel: "shortcut icon", type: "image/vnd.microsoft.icon"}

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

  %body
    %section.header
      .container
        .col-xs-12
          .brand
            %h1
              = link_to "/" do
                = image_tag "https://scalingo.com/logo-mini.png"
                Documentation center
    %section.main
      .container
        - if current_page.data.menu
          .col-xs-3
            = partial "menus/#{current_page.data.menu}"
          .col-xs-9
            = yield
        - else
          .col-xs-12
            = yield
    %footer
      .container
        .col-xs-12
          = link_to "scalingo.com", "https://scalingo.com"
