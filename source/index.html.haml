.container
  .row
    .col-xs-12
      %form.form-inline.search-field{role: "search"}
        .form-group
          .input-group
            .input-group-addon
              %i.fa.fa-search
            %input#st-search-input.form-control{type: "search", placeholder: "Search"}

  .row
    .col-lg-6.superblock
      .block
        %h2 Getting started
        %ul.list-unstyled
          %li
            %a{href: "/first-steps"}First Steps
          %li
            %a{href: "/heroku-compatibility"} Heroku compatibility
          %li
            %a{href: "/cli"}Command Line Tool
          %li
            %a{href: "/app/domain"}Custom Domain Name
          %li
            %a{href: "/databases"}Databases
    .col-lg-6.superblock
      .block
        %h2
          %a{href: "/languages"} Languages documentation
        %ul.list-unstyled
          - blog.by_top_category("languages")[0...10].each do |article|
            %li
              %a{href: article.url}=article.title

  .row
    .col-lg-6.superblock
      .block
        %h2 Recent Activity
        %ul.list-unstyled
          - blog.articles[0...10].each do |article|
            %li
              = link_to article.url do
                = article.title
                %span.last-article-date.pull-right
                  = article.date.strftime("%d-%m-%Y")

    .col-lg-6.superblock
      .block
        %h2
          %a{href: "/databases"} Databases
        %ul.list-unstyled
          - blog.by_top_category("databases")[0...10].each do |article|
            %li
              %a{href: article.url}=article.title
