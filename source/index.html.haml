.container
  .row
    .col-lg-6.superblock
      .block
        %h2 Getting started
        %ul.list-unstyled
          %li
            %a{href: "/first-steps"}First Steps
          %li
            %a{href: "/app/domain"}Custom Domain Name
    .col-lg-6.superblock
      .block
        %h2 Languages documentation
        %ul.list-unstyled
          - blog.by_top_category("languages")[0...5].each do |article|
            %li
              %a{href: article.url}=article.title

  .row
    .col-lg-6.superblock
      .block
        %h2 Recent Activity
        %ul.list-unstyled
          - blog.articles[0...5].each do |article|
            %li
              = link_to article.url do
                = article.title
                %span.last-article-date.pull-right
                  = article.date.strftime("%d-%m-%Y")
